{{> header}}

<div class="contact-page">
  <div class="page-bg"></div>

  <!-- ðŸŒŸ Hero Section -->
  <section class="bg-light text-dark text-center p-5">
    <div class="container">
      <h1 class="display-5 fw-bold">Join the Safari</h1>
      <p class="lead">Have questions, ideas, or want to share your favorite microorganism? Get in touch with us!</p>
    </div>
  </section>

  <!-- ðŸ“¬ Contact Form -->
  <section class="py-5 contact-section d-flex justify-content-center">
    <div class="card shadow-sm contact-card">
      <div class="card-body p-4">
        <h2 class="fw-bold mb-4 text-center">Contact Us</h2>
        <form>
          <div class="mb-3">
            <label for="name" class="form-label">Your Name</label>
            <input type="text" class="form-control" id="name" placeholder="Enter your name...">
          </div>
          <div class="mb-3">
            <label for="email" class="form-label">Email Address</label>
            <input type="email" class="form-control" id="email" placeholder="Enter your email...">
          </div>
          <div class="mb-3">
            <label for="message" class="form-label">Message</label>
            <textarea class="form-control" id="message" rows="4" placeholder="Write your message as well as feedback here..."></textarea>
          </div>
          <div class="d-grid">
            <button type="submit" class="btn btn-primary">Send Message</button>
          </div>
        </form>
      </div>
    </div>
  </section>
</div>

{{> footer}}
